# Server Configuration
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# Database
MONGODB_URI=mongodb://localhost:27017/tradesman-finance
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this
ENCRYPTION_KEY=your-32-character-encryption-key

# GoHighLevel Integration
GHL_API_KEY=your-gohighlevel-api-key
GHL_LOCATION_ID=your-gohighlevel-location-id
GHL_WEBHOOK_SECRET=your-webhook-secret

# Twilio SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+447123456789

# SendGrid Email
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@tradesmanfinance.co.uk
SENDGRID_FROM_NAME=Tradesman Finance

# Admin Notifications
ADMIN_EMAIL=admin@tradesmanfinance.co.uk
ADMIN_PHONE=+447987654321
SALES_TEAM_EMAIL=sales@tradesmanfinance.co.uk

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:8080,https://tradesmanfinance.co.uk,https://www.tradesmanfinance.co.uk

# Automation Settings
AUTO_FOLLOWUP_DELAY_HOURS=2
SMS_DELAY_MINUTES=5
WORKING_HOURS_START=9
WORKING_HOURS_END=18

# Admin / Security
ADMIN_API_KEY=change-me-strong-admin-key
JSON_BODY_LIMIT=1mb
URLENCODED_BODY_LIMIT=1mb

# Webhook Configuration
# Set this to the public base URL that Twilio will post to (required for signature validation)
TWILIO_WEBHOOK_BASE_URL=https://tradesmanfinance.co.uk
# SendGrid (Twilio Email) Event Webhook ECDSA public key for signature verification
SENDGRID_WEBHOOK_PUBLIC_KEY=your-sendgrid-ecdsa-public-key
